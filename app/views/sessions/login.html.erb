<% if flash[:error] %>
 <div class="error flash fatal">
         <h4 class ="error"><%= flash[:error] %></h4>
       </div>
        <% end %>

<h1>Login</h1>

<div class="form-container">

<form method="POST" action="/login">
    <div class= "form-group">
        <label for="username">Username:</label>
        <input type="text" name="user[username]" id="username" class="form-control" placeholder="Username:" required>
        </div>
    
    <div class= "form-group">
        <label for="password">Password:</label>
        <input type="password" name="user[password]" id="password" class="form-control" placeholder="Passowrd:"  required>
        </div>
    
    <input type="submit" value="login">

</form>
</div>
